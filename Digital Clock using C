#include<stdio.h>
#include<windows.h>
int main()
{
    int s,m,h;
    int d=1;

    printf("Set Time \n");
    printf("Enter the Hours");
    scanf("%d",&h);
    printf("Enter the Minutes");
    scanf("%d",&m);
    printf("Enter the Seconds");
    scanf("%d",&s);


    if(h>12||m>60||s>60)
    {
        printf("Error ");
        exit(0);

    }

    while(1)
    {
        s++;
        if(s>59)
        {
            m++;
            s=0;
        }

        if(m>59)
        {
            h++;
            m=0;

        }
        if(h>12)
        {
            h=1;
        }

        printf("TIME : \n");
        printf("%02d:%02d:%02d",h,m,s);
        sleep(d);
        system("cls");
    }
    return 0;
}
